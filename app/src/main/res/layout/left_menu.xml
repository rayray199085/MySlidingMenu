                      android:layout_toRightOf="@id/id_img1"
                      android:text="Item 1"
                      android:textSize="20sp"
                      android:layout_marginLeft="20dp"
                      android:textColor="#ffffff"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:menu="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.project.stephencao.myslidingmenu.view.SlidingMenu
            android:layout_width="match_parent"
            menu:menu_right_padding="50dp"
            android:background="@drawable/img_frame_background"
            android:id="@+id/id_sliding_menu"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <include layout="@layout/left_menu"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/qq"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                <Button android:layout_width="wrap_content"
                        android:id="@+id/id_toggle_menu"
                        android:text="Toggle Menu"
                        android:background="#00000000"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.project.stephencao.myslidingmenu.view.SlidingMenu>
</RelativeLayout>